<link type="text/css" rel="stylesheet" href="/css/login.css" >

<div id="sign-in-form-container">
    <form id="sign-in-form" class="row d-flex justify-content-center align-items-center" action="" method="post">
        <div class="mb-3 mt-3">
            <label for="email">Email:</label>
            <input type="email" class="form-control" id="email" placeholder="Enter email" name="email">
        </div>

        <div class="mb-3">
            <label for="pwd">Password:</label>
            <input type="password" class="form-control" id="pwd" placeholder="Enter password" name="pswd">
        </div>

        <div class="form-check mb-3">
            <label class="form-check-label">
                <input class="form-check-input" type="checkbox" name="remember"> Remember me
            </label>
        </div>

        <p class="small mb-3 pb-lg-2"><a class="text-black-50" href="#!">Forgot password?</a></p>

        <div class="d-flex justify-content-center text-center mt-4 pt-1">
            <a href="#!" class="text-black"><i class="fab fa-facebook-f fa-lg"></i></a>
            <a href="#!" class="text-black"><i class="fab fa-twitter fa-lg mx-4 px-2"></i></a>
            <a href="#!" class="text-black"><i class="fab fa-google fa-lg"></i></a>
        </div>

        <button type="submit" class="btn btn-primary mt-4 mb-4">Login</button>

        <div>
            <p class="mb-0 text-center">
                Don't have an account? 
                <a href="/user/sign-up" class="text-black-50 fw-bold">Sign Up</a>
            </p>
        </div>
    </form>
</div>